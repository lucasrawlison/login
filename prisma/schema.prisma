generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String
  tasks Tasks[]
}
model Tasks {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  completed Boolean?
  userId   String  @db.ObjectId
  user     User?   @relation(fields: [userId], references: [id])
}

