datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  email String   @unique
  name  String
  tasks Tasks[]  @relation("UserTasks")  // Agora referenciando userId corretamente
}

model Tasks {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  userId String @db.ObjectId  // Chave estrangeira correta para User
  user   User   @relation("UserTasks", fields: [userId], references: [id])  // Relação corretamente configurada
}
