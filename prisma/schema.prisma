generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Tasks {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  completed Boolean
  title     String
  userId    String  @db.ObjectId
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String
}
